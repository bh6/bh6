<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
     version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
     <persistence-unit name="bh6db">
          <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
          <class>com.ibm.bh6.dto.*</class> <!-- todo: add all dto classes -->
          <properties>              
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:db2://localhost:50000/BHDB" />
            <property name="javax.persistence.jdbc.driver" value="com.ibm.db2.jcc.DB2Driver" />
            <property name="javax.persistence.jdbc.user" value="db2admin" />
            <property name="javax.persistence.jdbc.password" value="Passw0rd"/>
          </properties>

    </persistence-unit>
</persistence>